<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Website</title>
    <link rel="stylesheet" href="styles/profile.css">
    <link rel="stylesheet" href="styles/search.css">
</head>
<body>
    <div class="top_bar">
        <div id="search_bar">
            <input type="text" id="search_box" placeholder="Search users or quizzes">
            <div id="suggestions_box">
                <ul id="suggestions_list">
                </ul>
            </div>
        </div>
    </div>
    
    <div class="sidebar">
        <ul class="side_list">

            <a href="/create"><li>Create-Quiz</li></a>
            <a href="/scores"><li>Past-Quizzes</li></a>
            <a href="/user?username=<%= username %>"><li>Identity</li></a>
            <a href="/auth?state=logout"><li>GET OUT</li></a>

        </ul>
    </div>
    
    <div class="content">
        <h1><%= displayUsersName %></h1>
        <p>@<%= displayUsername %></p>
        <div id="display-box"></div>
    </div>
    
    <script>
        let usersName = '<%= usersName %>';
        let username = '<%= username %>';
        let quizzes = '<%- JSON.stringify(quizzes) %>';
        let quizzesInfo = '<%- JSON.stringify(quizzesInfo) %>';
        let usersInfo = '<%- JSON.stringify(usersInfo) %>';
    </script>
    <script src="scripts/profile.js"></script>
    <script src="scripts/search.js"></script>
</body>
</html>